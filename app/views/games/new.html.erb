<article>
<section id="new-game">
<h1>New Game !</h1>
<ol>
<%@letters.each do |letter| %>
<li><%= letter %></li>
<% end %>
</ol>
</section>
<section id="user-answer">
<form action="/score" method="POST">
<label for="word">What is your longest word?</label>
<br/>
<input type="text" name="word" placeholder="put your word here">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
<input type="submit" value="play" id="submit">
</form>
</section>
</article>
